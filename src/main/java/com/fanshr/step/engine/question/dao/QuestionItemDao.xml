<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fanshr.step.engine.question.dao.QuestionItemDao">


    <resultMap id="itemMap" type="com.fanshr.step.engine.question.entity.QuestionItem">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="description" property="description"/>
        <result column="remark" property="remark"/>
        <result column="answer" property="answer"/>
        <result column="show_order" property="showOrder"/>
        <result column="uuid" property="uuid"/>
        <result column="creator_id" property="creatorId"/>
        <result column="create_date" property="createDate"/>
        <result column="create_time" property="createTime"/>
        <result column="create_at" property="createAt"/>
        <result column="modifier_id" property="modifierId"/>
        <result column="modify_date" property="modifyDate"/>
        <result column="modify_time" property="modifyTime"/>
        <result column="modify_at" property="modifyAt"/>
        <result column="category_id" property="categoryId"/>
        <result column="tags" property="tags"/>

        <association property="category" javaType="com.fanshr.step.engine.question.entity.Category"
                     select="com.fanshr.step.engine.question.dao.CategoryDao.queryOne" column="{id = category_id}"/>
        <!--    <id column="category_id" property="id"/>-->
        <!--    <result column="title" property="title"/>-->
        <!--    <result column="description" property="description"/>-->
        <!--    <result column="remark" property="remark"/>-->
        <!--    <result column="show_order" property="showOrder"/>-->
        <!--    <result column="create_at" property="createAt"/>-->
        <!--    <result column="modify_at" property="modifyAt"/>-->
        <!--</association>-->

        <collection property="tagList" javaType="java.util.ArrayList" ofType="com.fanshr.step.engine.question.entity.Tag"
                    select="com.fanshr.step.engine.question.dao.TagDao.queryByIds" column="{ids=tags}"/>
        <!--    <id column="tag_id" property="id"/>-->
        <!--    <result column="tag_title" property="title"/>-->
        <!--</collection>-->
    </resultMap>


    <select id="queryList" resultMap="itemMap">
        select id,title,description,remark,answer,show_order,create_at,modify_at,category_id,tags
        from tmp_interview_item
        <where>
            <if test="condition.title!=null">
                and title like concat('%',#{condition.title},'%')
            </if>
            <if test="condition.description!=null">
                and description like concat('%',#{condition.description},'%')
            </if>
            <if test="condition.remark!=null">
                and remark like concat('%',#{condition.remark},'%')
            </if>
            <if test="condition.answer!=null">
                and answer like concat('%',#{condition.answer},'%')
            </if>
            <if test="condition.categoryId!=null">
                and category_id = #{condition.categoryId}
            </if>
            <if test="condition.tags!=null">
                and
                <foreach collection="condition.tags.split(',')" index="index" item="item" open="(" separator="OR"
                         close=")">
                    find_in_set(${item},tags)
                </foreach>
            </if>
        </where>
        order by show_order desc
        limit #{rowIndex},#{pageSize}
    </select>
    <select id="queryCount" resultType="java.lang.Integer">
        SELECT
        count(1)
        FROM
        tmp_interview_item
        <where>
            <if test="condition.title!=null">
                and title like concat('%',#{condition.title},'%')
            </if>
            <if test="condition.description!=null">
                and description like concat('%',#{condition.description},'%')
            </if>
            <if test="condition.remark!=null">
                and remark like concat('%',#{condition.remark},'%')
            </if>
            <if test="condition.answer!=null">
                and answer like concat('%',#{condition.answer},'%')
            </if>
            <if test="condition.categoryId!=null">
                and category_id = #{condition.categoryId}
            </if>
            <if test="condition.tags!=null">
                and
                <foreach collection="condition.tags.split(',')" index="index" item="item" open="(" separator="OR"
                         close=")">
                    find_in_set(${item},tags)
                </foreach>
            </if>
        </where>
    </select>


    <select id="queryOne" resultMap="itemMap" parameterType="Integer">
        SELECT id,
               title,
               description,
               remark,
               answer,
               show_order,
               create_at,
               modify_at
        FROM tmp_interview_item
        WHERE id = #{id}
    </select>
    <select id="list" resultMap="itemMap">
        select id,title,description,remark,answer,show_order,create_at,modify_at,category_id,tags
        from tmp_interview_item
        <where>
            <if test="condition.title!=null and condition.title!=''">
                and title like concat('%',#{condition.title},'%')
            </if>
            <if test="condition.description!=null and condition.description!=''">
                and description like concat('%',#{condition.description},'%')
            </if>
            <if test="condition.remark!=null and condition.remark!=''">
                and remark like concat('%',#{condition.remark},'%')
            </if>
            <if test="condition.answer!=null and condition.answer!=''">
                and answer like concat('%',#{condition.answer},'%')
            </if>
            <if test="condition.categoryId!=null">
                and category_id = #{condition.categoryId}
            </if>
            <if test="condition.tags!=null and tags!=''">
                and
                <foreach collection="condition.tags.split(',')" index="index" item="item" open="(" separator="OR"
                         close=")">
                    find_in_set(${item},tags)
                </foreach>
            </if>
        </where>
        order by show_order

    </select>
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into tmp_interview_item ( title, category_id, tags, description, remark, answer, show_order, uuid,
                                        creator_id, create_date, create_time, create_at, modifier_id, modify_date,
                                        modify_time, modify_at)
        values (#{title},#{categoryId},#{tags}, #{description},#{remark}, #{answer},
                #{showOrder},   #{uuid}, #{creatorId}, #{createDate}, #{createTime}, #{createAt},
                #{modifierId}, #{modifyDate}, #{modifyTime}, #{modifyAt})

    </insert>

    <update id="update" parameterType="com.fanshr.step.engine.question.entity.QuestionItem">
        update tmp_interview_item
        <set>
            <if test="title!=null">title=#{title},</if>
            <if test="description!=null">description=#{description},</if>
            <if test="remark!=null">remark=#{remark},</if>
            <if test="answer!=null">answer=#{answer},</if>
            <if test="categoryId!=null">category_id=#{categoryId},</if>
            <if test="tags!=null">tags=#{tags},</if>
            <if test="showOrder!=null">show_order=#{showOrder},</if>
            <if test="modifyAt!=null">modify_at=#{modifyAt},</if>
        </set>
        where id=#{id}
    </update>
    <delete id="delete">
        DELETE
        FROM tmp_interview_item
        WHERE id = #{id}
    </delete>
    <delete id="batchDelete" parameterType="int">
        delete from tmp_interview_item where id in
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>